<%- include('layout', { title: "Login", body: "" }) %>

<style>
  .auth-hero {
    min-height: 100vh;
    background: linear-gradient(135deg, #060b27 0%, #111d55 45%, #f54a48 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 3rem 1rem;
  }
  .auth-card {
    width: min(960px, 95vw);
    border-radius: 28px;
    overflow: hidden;
    background: #fff;
  }
  .brand-panel {
    background: url("https://images.unsplash.com/photo-1521412644187-c49fa049e84d?auto=format&fit=crop&w=900&q=80")
      center/cover no-repeat;
    position: relative;
    color: #fff;
    padding: 3rem;
  }
  .brand-panel::after {
    content: "";
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0.15), rgba(0, 0, 0, 0.75));
  }
  .brand-panel > * {
    position: relative;
    z-index: 1;
  }
  .brand-pill {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.85rem;
    padding: 0.35rem 0.75rem;
    border-radius: 999px;
    background-color: rgba(255, 255, 255, 0.2);
    margin-bottom: 1rem;
  }
  .brand-pill .dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #f5f5f5;
  }
  .auth-form {
    padding: 3rem 2.5rem;
  }
  .auth-form .btn-primary {
    background: linear-gradient(120deg, #f54a48, #ff8a3d);
    border: none;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .auth-form .btn-primary:hover {
    transform: translateY(-1px);
    box-shadow: 0 12px 24px rgba(245, 74, 72, 0.2);
  }
  @media (max-width: 767px) {
    .auth-form {
      padding: 2rem 1.5rem;
    }
  }
</style>

<section class="auth-hero">
  <div class="auth-card shadow-lg">
    <div class="row g-0">
      <div class="col-md-6 d-none d-md-flex brand-panel flex-column justify-content-end">
        <div class="brand-pill">
          <span class="dot"></span>
          SPORTWEAR LAB
        </div>
        <h2 class="display-6 fw-bold">Perform with confidence.</h2>
        <p class="mb-4">
          Members unlock early drops, personalized training plans, and exclusive discounts on high-performance gear.
        </p>
        <ul class="list-unstyled small opacity-75 mb-0">
          <li>• Free same-day pickup in Bangkok</li>
          <li>• 30-day wear test guarantee</li>
          <li>• Personalized kit builder</li>
        </ul>
      </div>
      <div class="col-md-6 bg-white">
        <div class="auth-form">
          <p class="text-uppercase fw-semibold text-muted small mb-2">Member Access</p>
          <h3 class="fw-bold mb-4">Welcome back to Sportwear Store</h3>
          <form method="POST" action="/login">
            <div class="mb-3">
              <label class="form-label">Username</label>
              <input
                type="text"
                class="form-control form-control-lg"
                name="username"
                placeholder="e.g. runwithkai"
                required
              >
            </div>

            <div class="mb-4">
              <label class="form-label">Password</label>
              <input
                type="password"
                class="form-control form-control-lg"
                name="password"
                placeholder="Enter your password"
                required
              >
            </div>

            <div class="d-flex justify-content-between align-items-center mb-4">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="remember" checked>
                <label class="form-check-label" for="remember">Keep me signed in</label>
              </div>
              <a href="#" class="text-decoration-none small">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-100">
              Enter Member Hub
            </button>
          </form>

          <p class="text-center small text-muted mt-4 mb-0">
            Not a member yet? <a href="#" class="text-decoration-none fw-semibold">Join Sportwear Club</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
